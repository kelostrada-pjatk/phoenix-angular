  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>Hello ComputerStore!</title>
  <link rel="stylesheet" href="<%= static_path(@conn, "/css/app.css") %>">
